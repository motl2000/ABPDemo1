@page
@using Acme.BookStore.Web.Pages.Acme.BookStore.Book
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inherits Acme.BookStore.Web.Pages.BookStorePage
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Book"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:Book"].Value);
    PageLayout.Content.MenuItemName = "Book";
}

@section scripts
{
    <abp-script src="/Pages/Acme/BookStore/Book/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Acme/BookStore/Book/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Book"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewBookButton"
                            text="@L["CreateBook"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="BookTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["BookName"]</th>
                <th>@L["BookType"]</th>
                <th>@L["BookPublishDate"]</th>
                <th>@L["BookPrice"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>